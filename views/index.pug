html
    head
        script(src="/socket.io/socket.io.js")
        script(src="main.js")  
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        link(rel='stylesheet',href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css",integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT",crossorigin="anonymous")
        title Agregar productos
    body(class="d-flex flex-column justify-content-center align-items-center text-center")
        div(class="bg-secondary bg-opacity-25 w-50 mt-3")
            h1(class="fs-1 text-primary fw-bold d-block text-center")="Ingrese Producto"
            form(onsubmit="return newProduct(this)",class="container-fluid w-75 flex-column align-items-center justify-content-center") 
                label(for="Pname")= "Nombre"
                input(id="title",type="text", class="form-control",name="title",placeholder="calculadora",required="true")
                label(for="price")="Precio"
                input(id="price",type="text", class="form-control" name="price",placeholder="123.45",required="true")
                label(for="URLimg")="Foto URL"
                input(id="imgUrl",type="url", class="form-control" name="thumbnail",placeholder="https://cdn3.imagexample.com/example",required="true")
                input(type="submit", class="btn btn-primary" ,value="Enviar")
        div(class="bg-secondary bg-opacity-25 p-4 m-2")
            h1(class="text-primary fw-bold d-block text-center")="Productos"
            table(class="text-white table bg-dark p-2")
                thead
                    tr(class="text-center")  
                        th(class="text-center col")="Nombre"
                        th(class="text-center col")="Precio"
                        th(class="text-center col")="Foto"
                tbody(id="productos")
        div(class="bg-secondary bg-opacity-25 p-4 m-2")
            h1(class="text-primary fw-bold d-block text-center")="Centro de Mensajes"
            input(type="email",required="true",id="msgEmail",placeholder="email@ejemplo.com")
            div(class="d-flex flex-column",id="messages")
            form(onsubmit="return getNewMsg(this)")     
                input(type="text",required="true",placeholder="Ingres√° un mensaje...",id="newMsg")
                input(type="submit",value="Enviar!")